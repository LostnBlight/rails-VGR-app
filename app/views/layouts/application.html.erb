<!DOCTYPE html>
<html>
  <head>
    <title>RailsVgrApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    

    <div class="navbar-inner"> 
  <div class="nav justify-content-center">
    <div class="container">
        <ul>
          <ul class="left"><%= link_to "Home", root_path %></ul>
          <ul class="left"><%= link_to "Games", games_path %></ul>
          <% if current_user %>
            <ul class= "right"><span class="user"><%= link_to "#{current_user.username.capitalize} (#{current_user.reviews.count})", user_path(current_user) %></span></ul> 
            <ul class= "right"><%= link_to "Logout", logout_path, method:"delete" %></ul>
          
          <% end %>
        </ul>
      </div>
    </div>

    <%= yield %>
  </body>
</html>
